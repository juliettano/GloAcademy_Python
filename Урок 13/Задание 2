def main():
    import random
    def is_valid(user_input):
        if user_input.isdigit():
            user_number = int(user_input)
            if user_number >= 1 and user_number <= 100:
                return True
            else:
                return False
        else:
            return False
    

    secret_number = random.randint(1, 100)
    print('Добро пожаловать в игру "Угадай число"')
    counter = 0
    while True:
        print('Введите число от 1 до 100')
        user_input = input()
        counter += 1
        if not is_valid(user_input):
            continue
    
        user_number = int(user_input)

        if secret_number > user_number:
            print('Загаданное число больше, чем введенное вами число')
        elif secret_number < user_number:
            print('Загаданное число меньше, чем введенное вами число')
        else:
            print('УРА! Вы угадали загаданное число за', counter, 'попыток')
            break

    print('Спасибо за игру! Хотите сыграть еще раз? Введите y или n')
    play_again = input()
    if "y" in play_again:
        main()
    elif "n" in play_again:
        print('Приходите еще!')
    
main()
