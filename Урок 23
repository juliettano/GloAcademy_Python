import pygame

import random

import time

class Ball:
    def __init__(self, display):
        self.display = display
        self.color = pygame.Color('red')
        self.center_x = 100
        self.center_y = 100
        self.radius = 30
        self.vx = 2
        self.vy = 2
        
    def show(self):
        pygame.draw.circle(self.display, self.color, (self.center_x, self.center_y), self.radius)

    def go(self):
        self.center_x += self.vx
        self.center_y += self.vy
        
    def clear(self):
        pygame.draw.circle(self.display, pygame.Color('white'), (self.center_x, self.center_y), self.radius)
        
    def move(self):
        self.clear()
        self.go()
        self.show()

    def stop(self):
        self.vx = 0
        self.vy = 0
    def coordinates(self):
        if self.center_x + self.radius < width:
            True
        if self.center_y + self.radius > heigh:
            True
        if self.center_x - self.radius < 0:
            True
        if self.center_y - self.radius < 0:
            True

class RandomPointBall(Ball):
    def __init__(self, display):
        super().__init__(display)
        
        self.color = pygame.Color('blue')
        width, heigh = display.get_size()

        self.center_x = random.randint(self.radius, width - self.radius)
        self.center_y = random.randint(self.radius, heigh - self.radius)

class PointBall(Ball):
    def __init__(self, display, x, y):
        super().__init__(display)
        self.color = pygame.Color('yellow')

        self.center_x = x
        self.center_y = y

class RandomPointMovableBall(RandomPointBall):
    def __init__(self, display):
        super().__init__(display)
        self.vx = random.randint(-3, 3)
        self.vy = random.randint(-3, 3)
        while self.vx == 0 and self.vy== 0:
            self.vx = random.randint(-3, 3)
            self.vy = random.randint(-3, 3)

pygame.init()
scores = 0
width = 700
heigh = 400
display = pygame.display.set_mode((width, heigh))

display.fill((pygame.Color('white')))

balls = []
for i in range(10):    
    ball = RandomPointMovableBall(display)
    ball.show()
    balls.append(ball)
pygame.display.flip()

time.sleep(2)

clock = pygame.time.Clock()
while True:
    event_list = pygame.event.get()
    for event in event_list:
        if event.type == pygame.QUIT:
            pygame.quit()

        if event.type == pygame.MOUSEBUTTONDOWN:
            for ball in balls:
                ball.stop()
        if ball.coordinates() == True:
            scores += 1
    for ball in balls:
        ball.move()
        
    pygame.display.flip()
    clock.tick(80)
font_name = pygame.font.match_font('arial')
def print_text(text, x, y, font_color=(0, 0, 0), font_size=30):
    font = pygame.font.Font(font_name, font_size)
    message = font.render(text, True, font_color)
    display.blit(message, x, y)

print_text('Количество: ' + str(scores), 600, 10)
